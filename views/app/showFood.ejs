<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/show.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header class="header">
      <nav class="navbar">
        
          <a href="/">Home</a>
          <% if(!currentUser) { %> 
            <a href="/auth/signup">Signup</a>
            <a href="/auth/login">Login</a>
          <% } else { %> 
          <a href="/auth/logout">Logout</a>
          <a href="/profile">Profile</a>
         <a href="/app/logs">New Log</a>
          <% } %> 
     
      </nav>
    </header>


    <section class="contact" id="contact">
      <div class="timeline-column">
        <h2 class="heading">All Assigned<span>Exercises</span></h2>
     <% for (let i = 0; i < food.foods.length; i++) { %>
     <% let list = food.foods[i]; %>
    <div class="timeline-content">
     <p>meal1: <%=  list.meal1 %></p>
     <p>meal2: <%=  list.meal2 %></p>
     <p>meal3: <%=  list.meal3 %></p>
     <p>meal4: <%=  list.meal4 %></p>
    
     <a href="/app/editfood/<%= list._id %>/edit" >Edit Food</a>
     <a href="/app/deletefood/<%= list._id %>/delete" >Delete Food</a>
    </div>
     <% } %>

    </div>
    </section>
</body>
</html>