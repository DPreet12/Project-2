<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/show.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header class="header">
        <nav class="navbar">
          
            <a href="/">Home</a>
            <% if(!currentUser) { %> 
              <a href="/auth/signup">Signup</a>
              <a href="/auth/login">Login</a>
            <% } else { %> 
            <a href="/auth/logout">Logout</a>
            <a href="/profile">Profile</a>
           <a href="/app/logs">New Log</a>
            <% } %> 
       
        </nav>
      </header>


    <section class="contact" id="contact">

      <div class="timeline-column">
        <h2 class="heading">All Workout <span>Logs</span></h2>
     <% for (let i = 0; i < allWorkout.length; i++) { %>
     <% let list = allWorkout[i]; %>
     <div class="timeline-content">
     <p>Date: <%=  list.date %></p>
     <p>totalSets: <%=  list.totalSets %></p>
     <p>repsForEachSet: <%=  list.repsForEachSet %></p>
     <p>totalDuration: <%=  list.totalDuration %></p>
     <p>totaldistance: <%=  list.totaldistance %></p>
     <a href="/app/allWorkout/<%= list._id %>/edit/">Edit Log</a>
     <a href="/app/allWorkout/<%= list._id %>/delete/">Delete Log</a>
     <a href="/app/showExercises/<%= list._id %>/">View Exercise</a>
     <a href="/app/exercise/<%= list._id %>/">Add Exercise</a>
     <% console.log("each workout",list) %>
    </div>
     <% } %>
    </div>
    </section>
</body>
</html>