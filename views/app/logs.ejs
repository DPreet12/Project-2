<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/edit.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>

    <header class="header">
      <nav class="navbar">
        
          <a href="/">Home</a>
          <% if(!currentUser) { %> 
            <a href="/auth/signup">Signup</a>
            <a href="/auth/login">Login</a>
          <% } else { %> 
             <a href="/app/logs">New Log</a>
            <a href="/app/allWorkout">All Workout Logs</a>
            <a href="/profile">Profile</a>
            <a href="/auth/logout">Logout</a>
          <% } %> 
     
      </nav>
    </header>


    <section class="contact" id="contact">
        <h2 class="heading">Create new Workout <span>Log</span></h2>

        <form action="/app/logs" method="POST">
            <div class="input-box">

                <div class="input">
                    <input type="date" placeholder="date" name="date" required>
                </div>

                <div class="input">
                    <input type="text" placeholder="Total Sets" name="totalSets" required>
                </div>
                
                <div class="input">
                    <input type="text" placeholder="Reps For Each Set" name="repsForEachSet" required>
                </div>
                
                <div class="input">
                    <input type="text" placeholder="Total Duration(mins)" name="totalDuration">
                </div>
                
                <div class="input">
                    <input type="text" placeholder="Total Distance(kms)" name="totaldistance">
                </div>
                
            </div>
            
            <input type="submit" value="Logs" class="btn">
        </form>
    </section>
</body>
</html>