<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"crossorigin="anonymous">
    <link rel="stylesheet" href="/css/search.css">
</head>
<body>

    <% if (alerts.success) { %>
      <% alerts.success.forEach(msg => { %>
         
        <div class="alert alert-success"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (alerts.error) { %>
      <% alerts.error.forEach(msg => { %>
       <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
  <% } %>


  <header class="header">
    <nav class="navbar">
      
       
        <% if(!currentUser) { %> 
          <a href="/auth/signup">Signup</a>
          <a href="/auth/login">Login</a>
        <% } else { %> 
       <a href="/auth/logout">Logout</a>
       <a href="/profile">Profile</a>
       <a href="/app/logs">New Log</a>
        <a href="/app/allWorkout">All Workout Logs</a>
        <% } %> 
      
    </nav>
  </header>
    
    <section class="contact" id="contact">
        <h2 class="heading"><span>Homepage!</span></h2>

        <form action="/workout" method="GET">
          <div class="input-box">
            <input type="text" placeholder="Search Workout" name="workout" required>
          </div>
          <input type="submit" value="Search" class="btn">
        </form>
        
        <form action="/nutrients" method="GET">
          <div class="input-box">
            <input type="text" placeholder="Food Info" name="nutrients" required>
          </div>
          <input type="submit" value="Search" class="btn">
        </form>
    </section>
</body>
</html>