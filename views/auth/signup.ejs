<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"crossorigin="anonymous">
    <link rel="stylesheet" href="/css/signup.css">
</head>
<body>
 
  <% if (alerts.success) { %>
    <% alerts.success.forEach(msg => { %>
       
      <div class="alert alert-success"><%= msg %></div>
    <% }) %>
  <% } %>

  <% if (alerts.error) { %>
    <% alerts.error.forEach(msg => { %>
     <div class="alert alert-danger"><%= msg %></div>
    <% }) %>
<% } %>
    
  
  <header class="header">
        
        <nav class="navbar">
          
           <!-- <a href="/">Home</a> -->
            <% if(!currentUser) { %> 
              <a href="/auth/signup">Signup</a>
              <a href="/auth/login">Login</a>
            <% } else { %> 
            <a href="/auth/logout">Logout</a>
            <a href="/profile">Profile</a>
            <% } %> 
          
        </nav>
      </header>
    
    <section class="contact" id="contact">
        <h2 class="heading">Let's <span>Sign Up!</span></h2>

        <form action="/auth/signup" method="POST">
            <div class="input-box">
                <input type="text" placeholder="Name" name="name" required>
                <input type="text" placeholder="Phone Number xxx-xxx-xxxx" name="phone" required>
            </div>
            <div class="input-box">
                <input type="email" placeholder="Email" name="email">
                <input type="text" placeholder="Weight" name="weight">
            </div>

            <div class="input-box">
              <input type="text" placeholder="Height" name="height">
              <input type="text" placeholder="Gender" name="gender">
          </div>

          <div class="input-box">

            <!-- <input type="text" placeholder="Level" name="level"> -->

            <select name="level" class="select" required>
              <option value="" disabled></option>
              <option value="beginner">Beginner</option>
              <option value="intermediate">Intermediate</option>
              <option value="abvance">Advance</option>
            </select>
           
            <!-- <input type="text" placeholder="Goal" name="goal"> -->

            <select name="goal" class="select" required>
              <option value="" disabled></option>
              <option value="weightLoss">Weight Loss</option>
              <option value="flexibility">Flexibility</option>
              <option value="endurance">Endurance</option>
            </select>
          </div>

          
          <div class="input-box">
            <input type="password" placeholder="Password" name="password">
          </div>

            <input type="submit" value="Sign Up" class="btn">
        </form>
    </section>
</body>
</html>