<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/allWorkout.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header class="header">
        <nav class="navbar">
          
            <a href="/">Home</a>
            <% if(!currentUser) { %> 
              <a href="/auth/signup">Signup</a>
              <a href="/auth/login">Login</a>
            <% } else { %> 
              <a href="/app/logs">New Log</a>
              <a href="/app/allWorkout">All Workout Logs</a>
              <a href="/profile">Profile</a>
              <a href="/auth/logout">Logout</a>
            <% } %> 
       
        </nav>
      </header>


    <section class="contact" id="contact">

      <div class="timeline-column">
        <h2 class="heading">All Workout <span id="logs">Logs</span></h2>
     <% for (let i = 0; i < allWorkout.length; i++) { %>
     <% let list = allWorkout[i]; %>
     <div class="timeline-content">
      
        <div class="text-content">
     <p>Date: <%=  list.date %></p>
     <p>Total Sets: <%=  list.totalSets %></p>
     <p>Reps For Each Set: <%=  list.repsForEachSet %></p>
     <p>Total Duration: <%=  list.totalDuration %></p>
     <p>Total Distance: <%=  list.totaldistance %></p>
     <a href="/app/allWorkout/<%= list._id %>/edit/">Edit Log</a>
     <a href="/app/allWorkout/<%= list._id %>/delete/">Delete Log</a>
     <a href="/app/showExercises/<%= list._id %>/">View Exercise</a>
     <a href="/app/exercise/<%= list._id %>/">Add Exercise</a>
     <% console.log("each workout",list) %>
    </div>
    
     <div class="image">
      <img src="/img/logs.jpg" alt="logs" >
     </div>
    
  </div>
<!--    
    <div class="image">
      <img src="/img/logs.jpg" alt="logs" class="src">
    </div> -->

     <% } %>
    </div>
    </section>
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
    <script>const headingLog = document.querySelector("#logs");
      const typedLog = new Typed(headingLog, {
          strings: [headingLog.textContent],
          typeSpeed: 100,
          backSpeed: 100,
          backDelay: 500,
          loop: true,
          showCursor: false,
      })
      </script>
</body>
</html>