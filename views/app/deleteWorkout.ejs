<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/delete.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header class="header">
      <nav class="navbar">
        
         <a href="/">Home</a>
          <% if(!currentUser) { %> 
            <a href="/auth/signup">Signup</a>
            <a href="/auth/login">Login</a>
          <% } else { %> 
          <a href="/auth/logout">Logout</a>
          <a href="/profile">Profile</a>
          <a href="/app/logs">New Log</a>
          <% } %> 
        
      </nav>
    </header>


      <section class="contact" id="contact">
        <h2 class="heading">Delete Workout <span>Log</span></h2>

        <form action="/app/allWorkout/<%= delLog._id %>/?_method=DELETE" method="POST">
     
        <p>Date: <%= delLog.date %></p>
        <p>Total Sets: <%= delLog.totalSets %></p>
        <p>Reps for Each Set: <%= delLog.repsForEachSet %></p>
        <p>Total Duration: <%= delLog.totalDuration %></p>
        <p>Total Distance: <%= delLog.totaldistance %></p>
     
        <input type="submit" value="Delete" class="btn">
        </form>
    
    </section>
  
</body>
</html>