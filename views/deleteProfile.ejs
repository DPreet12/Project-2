<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/delete.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header class="header">
      <nav class="navbar">
        
         <a href="/">Home</a>
          <% if(!currentUser) { %> 
            <a href="/auth/signup">Signup</a>
            <a href="/auth/login">Login</a>
          <% } else { %> 
            <a href="/app/logs">New Log</a>
            <a href="/app/allWorkout">All Workout Logs</a>
            <a href="/profile">Profile</a>
            <a href="/auth/logout">Logout</a>
          <% } %> 
        
      </nav>
    </header>


      <section class="contact" id="contact">
        <h2 class="heading">Delete Your<span>Profile</span></h2>

        <form action="/profile/deleteProfile/<%= delId._id %>/?_method=DELETE" method="POST">
     
            <p>Name: <%= delId.name %></p>
            <p>Email: <%= delId.email %></p>
            <p>Phone: <%= delId.phone %></p>
            <p>Gender: <%= delId.gender %></p>
            <p>Weight: <%= delId.weight %></p>
            <p>Height: <%= delId.height %></p>
            <p>CurrentLevel: <%= delId.level %></p>
            <p>Goal: <%= delId.goal %></p>

         
        <input type="submit" value="Delete" class="btn">
        <a href="/profile" class="btn">Go Back</a>
        </form>
    
    </section>
  
</body>
</html>