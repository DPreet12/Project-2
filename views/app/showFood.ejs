<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header>
        <nav class="navbar">
          <ul>
            <li><a href="/">Home</a></li>
            <% if(!currentUser) { %> 
              <li><a href="/auth/signup">Signup</a></li>
              <li><a href="/auth/login">Login</a></li>
            <% } else { %> 
            <li><a href="/auth/logout">Logout</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/app/logs">New Log</a></li>
           
            <% } %> 
          </ul>
        </nav>
      </header>


    <section class="contact" id="contact">
        <h2 class="heading">All Assigned<span>Exercises</span></h2>
     <% for (let i = 0; i < food.foods.length; i++) { %>
     <% let list = food.foods[i]; %>
    
     <p>meal1: <%=  list.meal1 %></p>
     <p>meal2: <%=  list.meal2 %></p>
     <p>meal3: <%=  list.meal3 %></p>
     <p>meal4: <%=  list.meal4 %></p>
    
     <% } %>

    </section>
</body>
</html>