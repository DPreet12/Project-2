<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/edit.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header class="header">
      <nav class="navbar">
        
         <a href="/">Home</a>
          <% if(!currentUser) { %> 
            <a href="/auth/signup">Signup</a>
            <a href="/auth/login">Login</a>
          <% } else { %> 
          <a href="/auth/logout">Logout</a>
          <a href="/profile">Profile</a>
          <a href="/app/logs">New Log</a>
          <% } %> 
        
      </nav>
    </header>



      <section class="contact" id="contact">
        <h2 class="heading">Edit Workout <span>Log</span></h2>

        <form action="/app/editExercise/<%= findId._id %>?_method=PUT" method="POST">

        <div class="input-box">
        <div class="input">
          <input type="text" placeholder="Type" name="type" required>
        </div>

        <div class="input">
          <input type="number" placeholder="Duration" name="duration">
        </div>

        <div class="input">
          <input type="number" placeholder="Distance" name="distance">
        </div>

        <div class="input">
          <input type="number" placeholder="Sets" name="sets">
        </div>

        <div class="input">
          <input type="number" placeholder="Reps" name="reps">
        </div>

        <div class="input">
          <input type="text" placeholder="Notes" name="notes">
        </div>

      </div>

      <input type="submit" value="Edit Exercise" class="btn">
        </form>
        
        
    </section>
  
</body>
</html>