<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/show.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
     
    <header class="header">
      <nav class="navbar">
        
          <a href="/">Home</a>
          <% if(!currentUser) { %> 
            <a href="/auth/signup">Signup</a>
            <a href="/auth/login">Login</a>
          <% } else { %> 
          <a href="/auth/logout">Logout</a>
          <a href="/profile">Profile</a>
         <a href="/app/logs">New Log</a>
          <% } %> 
     
      </nav>
    </header>


    <section class="contact" id="contact">

      <div class="timeline-column">
        <h2 class="heading">All Assigned<span>Exercises</span></h2>
     <% for (let i = 0; i < log2.exercises.length; i++) { %>
     <% let list = log2.exercises[i]; %>
     <div class="timeline-content">
     <p>Type: <%=  list.type %></p>
     <p>Duration: <%=  list.duration %></p>
     <p>Distance: <%=  list.distance %></p>
     <p>Sets: <%=  list.sets %></p>
     <p>Reps: <%=  list.reps %></p>
     <p>Notes: <%=  list.notes %></p>
     <a href="/app/editExercise/<%= list._id %>/edit">Edit Exercise </a>
     <a href="/app/deleteExercise/<%= list._id %>/delete">Delete Exercise</a>
     <a href="/app/showfood/<%= list._id %>">View Food</a>
     <a href="/app/food/<%= list._id %>">Add Food</a>
    
     
     
     <% console.log("each exercise",list) %>
    </div>
     <% } %>
    </div>
    </section>
</body>
</html>