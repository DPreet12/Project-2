<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header>
        <nav class="navbar">
          <ul>
            <li><a href="/">Home</a></li>
            <% if(!currentUser) { %> 
              <li><a href="/auth/signup">Signup</a></li>
              <li><a href="/auth/login">Login</a></li>
            <% } else { %> 
            <li><a href="/auth/logout">Logout</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/app/logs">New Log</a></li>
            <% } %> 
          </ul>
        </nav>
      </header>


      <section class="contact" id="contact">
        <h2 class="heading">Edit Workout <span>Log</span></h2>

        <form action="/app/editExercise/<%= findId._id %>?_method=PUT" method="POST">

        <div class="input-box">
        <div>
          <input type="text" placeholder="type" name="type" required>
        </div>

        <div>
          <input type="number" placeholder="duration" name="duration">
        </div>

        <div>
          <input type="number" placeholder="distance" name="distance">
        </div>

        <div>
          <input type="number" placeholder="sets" name="sets">
        </div>

        <div>
          <input type="number" placeholder="reps" name="reps">
        </div>

        <div>
          <input type="text" placeholder="notes" name="notes">
        </div>

      </div>

      <input type="submit" value="Edit Exercise" class="btn">
        </form>
        
        
    </section>
  
</body>
</html>