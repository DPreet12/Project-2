<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header>
        <nav class="navbar">
          <ul>
            <li><a href="/">Home</a></li>
            <% if(!currentUser) { %> 
              <li><a href="/auth/signup">Signup</a></li>
              <li><a href="/auth/login">Login</a></li>
            <% } else { %> 
            <li><a href="/auth/logout">Logout</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/app/logs">New Log</a></li>
            <% } %> 
          </ul>
        </nav>
      </header>


      <section class="contact" id="contact">
        <h2 class="heading">Delete  <span>Food</span></h2>

        <form action="/app/deletefood/<%= delFoodId2._id %>?_method=DELETE" method="POST">
            <p>Meal 1: <%= delFoodId2.meal1 %></p>
            <p>Meal 2: <%= delFoodId2.meal2 %></p>
            <p>Meal 3: <%= delFoodId2.meal3 %></p>
            <p>Meal 4: <%= delFoodId2.meal4 %></p>
            <p>Notes: <%= delFoodId2.notes %></p>
            
            </p>
         
            <input type="submit" value="Delete" class="btn">
            </form>
    
    </section>
  
</body>
</html>